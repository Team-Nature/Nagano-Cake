<div class="row">
  <div class="col-sm-offset-1 col-sm-10">

  <h3 class="page-heading"><span>&emsp;管理者ログイン&emsp;</span></h3>

<br>

<%= form_with model: @admin, url: session_path(resource), local: true do |f|%>
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <%= f.label :email, "メールアドレス", class: "control-label col-sm-3" %>
        <div class="col-sm-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

   <div class="field form-group">
     <div class="row">
       <div class="col-sm-8 col-sm-offset-2">
         <%= f.label :password, "パスワード", class: "control-label col-sm-3" %>
         <div class="col-sm-9">
           <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
         </div>
       </div>
     </div>

   <div class="actions text-center">
    <br><%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
   </div>
<% end %>

  </div>
</div>
