
<div class="container">
  <div class="row">
<div class="col-sm-10 col-sm-offset-1">
  <h3 class="page-heading margin-bottom-sm"><span>&emsp;登録情報編集&emsp;</h3>
</div>
<br>
<%= form_with model: @customer, url: customers_path, local: true, method: :patch do |f| %>

	<!-- エラーメッセージ表示-->
	<% if @customer.errors.any? %>
		<div id="error_explanation">
			<h3><%= @customer.errors.count %>error prohibited this obj from being saved:</h3>
			<ul>
				<% @customer.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!-- エラーメッセージ表示-->

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
  <div class="field form-group col-sm-12">
    <%= f.label :名前, class: "col-sm-2 control-label" %>
    <%= f.label :"(姓)", class: "col-sm-1 control-label "%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" , class: "col-sm-3 form-control-label" %>
    <%= f.label :"(名)", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-sm-3 form-control-label" %>
  </div>

  <div class="field form-group col-sm-12">
    <%= f.label :フリガナ, class: "col-sm-2 control-label" %>
    <%= f.label :"(セイ)", class: "col-sm-1 control-label"%>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-sm-3 form-control-label" %>
    <%= f.label :"(メイ)", class: "col-sm-1 control-label"%>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-sm-3 form-control-label" %>
  </div>

  <div class="field form-group col-sm-9">
    <%= f.label :メールアドレス, class: "col-sm-4 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-sm-9">
    <%= f.label :郵便番号（ハイフンなし）, class: "col-sm-4 control-label" %>
    <%= f.text_field :postcode, autocomplete: "address", autofocus: true, class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-sm-12">
    <%= f.label :住所, class: "col-sm-3 control-label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-sm-7 control-label" %>
  </div>

  <div class="field form-group col-sm-9">
    <%= f.label :電話番号（ハイフンなし）, class: "col-sm-4 control-label" %>
    <%= f.text_field :tel, autofocus: true, autocomplete: "tel", class: "col-sm-4 control-label" %>
  </div>

  <div class="actions col-sm-5">
    <%= f.submit "編集内容を保存する",class: 'btn btn-primary col-sm-5 pull-right'  %>
  </div>
  <div class="actions col-sm-5 col-sm-offset-2">
  <div class="text-center">
  	<%= link_to '退会する', quit_path, class: "btn btn-danger" %>
  </div>
  </div>
</div>

<% end %>
</div>
</div>
