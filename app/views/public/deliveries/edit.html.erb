<div class=".col-sm-10 col-sm-offset-2">
  <h3 class="page-heading margin-bottom-sm"><span>&emsp;配送先編集&emsp;</span></h3>
</div>

<%= form_with model:@delivery, local: true do |f| %>

	<!-- エラーメッセージ表示-->
	<% if @delivery.errors.any? %>
		<div id="error_explanation">
			<h3><%= @delivery.errors.count %>error prohibited this obj from being saved:</h3>
			<ul>
				<% @delivery.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!-- エラーメッセージ表示-->
<div class="row">
  <div class="field form-group col-sm-10 col-sm-offset-1">
    <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "col-sm-3 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :postcode, autofocus: true, class: "form-control" %>
    </div>
    <div class="col-sm-5"></div>
  </div>
</div>

<div class="row">
  <div class="field form-group col-sm-10 col-sm-offset-1">
    <%= f.label :address, "住所", class: "col-sm-3 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="field form-group col-sm-10 col-sm-offset-1">
    <%= f.label :name, "宛名", class: "col-sm-3 control-label" %>
    <div class="col-sm-3">
    <%= f.text_field :name, autocomplete: "tel", class: "col-sm-8 form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="actions col-sm-7 col-sm-offset-5">
    <%= f.submit "編集する",class: 'btn btn-primary col-sm-4 pull-right'  %>
  </div>
</div>
</tbody>

<% end %>