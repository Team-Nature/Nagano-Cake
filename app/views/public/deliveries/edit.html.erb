<h1>配送先編集</h1>

<%= form_with model:@delivery, local: true do |f| %>

	<!-- エラーメッセージ表示-->
	<% if @delivery.errors.any? %>
		<div id="error_explanation">
			<h3><%= @delivery.errors.count %>error prohibited this obj from being saved:</h3>
			<ul>
				<% @delivery.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!-- エラーメッセージ表示-->

<table class='table'>


  <div class="field form-group col-xs-9">
    <%= f.label :郵便番号（ハイフンなし）, class: "col-sm-4 control-label" %>
    <%= f.text_field :postcode, autofocus: true, class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :住所, class: "col-sm-3 control-label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-sm-7 control-label" %>
  </div>

  <div class="field form-group col-xs-9">
    <%= f.label :宛名, class: "col-sm-4 control-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "tel", class: "col-sm-4 control-label" %>
  </div>

</tbody>
</table>

  <div class="actions col-xs-6">
    <%= f.submit "編集する",class: 'btn btn-success col-xs-5 pull-right'  %>
  </div>



<% end %>