 <div class="row">
  <div class="col-xs-offset-1 col-xs-12">
    <h1>配送先登録/一覧</h1>
    <%= form_with model:@delivery, local: true do |f| %>
  <table class='table'>
    <div class="field form-group col-xs-9">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-sm-4 control-label" %>
      <%= f.text_field :postcode, autofocus: true, class: "col-sm-4 control-label" %>
    </div>

    <div class="field form-group col-xs-12">
      <%= f.label :住所, class: "col-sm-3 control-label" %>
      <%= f.text_field :address, autofocus: true, autocomplete: "delivery_address", class: "col-sm-6 control-label" %>
    </div>

    <div class="field form-group col-xs-12">
      <%= f.label :宛名, class: "col-sm-3 control-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "delivery_name" , class: "col-sm-3 form-control-label" %>
    <div class="actions col-xs-6">
    <%= f.submit "登録する",class: 'btn btn-success col-xs-4 col-xs-offset-6'  %>
    </div>
    </div>
  </table>
  <% end %>

  <table class='table'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @deliveries.each do |delivery| %>
    <tr>
      <td><%= delivery.postcode %></td>
      <td><%= delivery.address %></td>
      <td><%= delivery.name %></td>
      <td>
        <%= link_to "編集する", edit_delivery_path(delivery), class: "btn-sm btn-success" %>
        <%= link_to "削除する", delivery_path(delivery), method: :delete, class: "btn-sm btn-danger" %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>



 </div>
</div>