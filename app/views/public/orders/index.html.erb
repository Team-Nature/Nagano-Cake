<div class="col-md-12">
  <h3 class="order-index-title"><span>注文履歴一覧</span></h3>
  <table class="table table-bordered table-condensed order-table">
    <thead>
      <tr><th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>ステータス</th><th>注文詳細</th></tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td><%= order.deliver_postcode %><br><%= order.deliver_address %><br><%= order.deliver_name %></td>
          <td>
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
            <% end %>
          </td>
          <td><%= order.get_whole_total_price.to_s(:delimited) %>円</td>
          <td><%= order.status %></td>
          <td class="text-center"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>