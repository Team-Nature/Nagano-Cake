<div class="col-md-12">
  <h3 class="page-heading margin-bottom-sm margin-left-lg"><span>&emsp;注文履歴一覧&emsp;</span></h3>
  <table class="table table-bordered table-condensed">
    <thead>
      <tr><th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>ステータス</th><th>注文詳細</th></tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td class="vertical-align-middle"><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td class="vertical-align-middle"><%= order.deliver_postcode %><br><%= order.deliver_address %><br><%= order.deliver_name %></td>
          <td class="vertical-align-middle">
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
            <% end %>
          </td>
          <td class="vertical-align-middle"><%= order.get_whole_total_price.to_s(:delimited) %>円</td>
          <td class="vertical-align-middle"><%= order.status %></td>
          <td class="text-center vertical-align-middle"><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>