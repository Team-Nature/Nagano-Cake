<h1>注文履歴一覧</h1>
<thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.created_at %></td>
      <td>
        <%= order.deliver_postcode %>
        <%= order.deliver_address %>
        <%= order.deliver_name %>
      </td>
      <td>
        <% order.order_items.each do |order_item| %>
        <%= order_item.item.name %>
        <% end %>
      </td>
      <td><%= order.get_whole_total_price %></td>
      <td><%= order.status %></td>

  <!--注文履歴詳細へ-->
      <td>
        <%= link_to "表示する", order_path(order), class: "btn-sm btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>