
<h1>注文履歴詳細</h1>
<h3>注文情報</h3>
  <table class="table">
        <tr><th>注文日</th><th><%= @order.created_at %></th></tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= @order.deliver_postcode %><br>
            <%= @order.deliver_address %><br>
            <%= @order.deliver_name %><br>
          </td>
        </tr>
        <tr><th>支払方法</th><td><%= @order.how_to_pay %></td></tr>
        <tr><th>ステータス</th><td><%= @order.status %></td></tr>
      </table>


<table class='float-right'>
<h2>請求情報</h2>
        <tr><th>商品合計</th><td><%= @order.total_price %></td></tr>
        <tr><th>配送料</th><td><%= @order.deliver_fee %></td></tr>
        <tr><th><b>ご請求額</b></th><td><%= @order.get_whole_total_price %></td></tr>
</table>

<table>
  <h2>請求情報</h2>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <%= render @order_items %>
  </tbody>
  
  
  
  
</table>

