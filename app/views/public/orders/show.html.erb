<div class="col-md-10 col-sm-offset-1">
  <h3 class="page-heading margin-bottom-sm"><span>&emsp;注文履歴詳細&emsp;</span></h3>
</div>

<div class="row">
  <div class="col-md-7">
    <h4><b>注文情報</b></h4>
    <table class="table table-bordered">
      <tr class="row">
        <th class="colored col-sm-2">注文日</th>
        <td class="col-sm-10"><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr class="row">
        <th class="colored col-sm-2">配送先</th>
        <td class="col-sm-10"><%= @order.deliver_postcode%><br><%= @order.deliver_address %><br><%= @order.deliver_name %></td>
      </tr>
      <tr class="row">
        <th class="colored col-sm-2">支払方法</th>
        <td class="col-sm-10"><%= @order.how_to_pay %></td>
      </tr>
      <tr class="row">
        <th class="colored col-sm-2">ステータス</th>
        <td class="col-sm-10"><%= @order.status %></td>
      </tr>
    </table>
  </div>

  <div class="col-md-5">
    <h4><b>請求情報</b></h4>
    <table class="table table-bordered">
      <tr>
        <th class="colored">商品合計</th>
        <td><%= @order.total_price.to_s(:delimited) %></td></tr>
      <tr>
        <th class="colored">配送料</th>
        <td><%= @order.deliver_fee %></td>
      </tr>
      <tr>
        <th class="colored"><b>ご請求額</b></th>
        <td><%= @order.get_whole_total_price.to_s(:delimited) %></td>
      </tr>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <h4><b>注文内容</b></h4>
    <table class="table table-bordered">
      <thead>
        <tr><th>商品</th><th>単価（税込）</th><th>個数</th><th>小計</th></tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.price %></td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.subtotal %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
