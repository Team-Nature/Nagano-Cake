<h1>注文情報入力</h1>

<%= form_with model: @order, url: log_path, method: :post, local: true  do |f| %>

<h3>支払い方法</h3>

<div>
<%= f.radio_button :how_to_pay, :"クレジットカード" %>
<span>クレジットカード</span>
</div>


<div>
<%= f.radio_button :how_to_pay, :"銀行振込" %>
<span>銀行振り込み</span>
</div>

<h3>お届け先</h3>
<%= f.radio_button :addresses, "address", checked: true  %>
<span>ご自身の住所</span><br>
<%= "#{current_customer.address} #{current_customer.address}" %>
<br>
<%= "#{current_customer.first_name} #{current_customer.last_name}" %>

<br>
 <% if @deliveries_addresses != [] %>
 <%= f.radio_button :addresses, "deliver_address" %>
 <span>登録済住所から選択</span><br>

<%= f.select :select_address, current_customer.deliveries.all.map { |address| ["#{address.postcode} #{address.address} #{address.name}", address.id] } %>


 <br>
 <%= f.radio_button :addresses, "new_address" %>

<span>新しいお届け先</span><br>

  <%= f.label :"郵便番号(ハイフンなし)" %>
  <%= f.text_field :deliver_postcode %>
<br>
  <%= f.label :"住所" %>
  <%= f.text_field :deliver_address %>
<br>
  <%= f.label :"宛名" %>
  <%= f.text_field :deliver_name %>
<br>

<%= f.submit "確認画面へ進む", class: "btn btn-primary" %>

  <% end %>
<% end %>