<tr>
  <td>
    <%= attachment_image_tag(cart_item.item, :image, size: "50x30", fallback: "/assets/images/noimage.jpg") %>
    <%= cart_item.item.name %>
    </td>
  <td> <%= cart_item.price_with_tax.to_s(:delimited) %></td>
  <td class="text-center">
    <%= form_with model: cart_item, class: "form-inline", local: true do |f| %>
      <%= f.hidden_field :item_id, value: cart_item.item.id %>
      <%= f.number_field :amount, min: 1, id: "cart_item-#{cart_item.id}", class: "form-control width-70" %>
      <%= f.submit "変更", class: "btn btn-primary", id: "cart_item-update-#{cart_item.id}" %>
    <% end %>
  </td>
  <td><%= cart_item.subtotal.to_s(:delimited) %></td>
  <td class="text-center"><%= link_to "削除する", cart_item_path(cart_item), class: "btn btn-danger", method: :delete %></td>
</tr>
