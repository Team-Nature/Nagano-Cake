<div class="container">
  <div class="row">
    <div class="col-sm-12">

<% if current_customer.cart_items.any? %>


<div class="col-md-10 col-md-offset-1">

 <h3 class="page-heading margin-bottom-sm"><span>&emsp;ショッピングカート&emsp;</span>
 <%= link_to "カートを空にする", cart_items_path, method: :delete, class: "btn btn-danger pull-right" %>
 </h3>

 <br>

<table class="table table-condensed table-bordered">
  <thead class="row">
      <th class="col-sm-4">商品名</th>
      <th class="col-sm-2">単価(税込)</th>
      <th class="col-sm-2">数量</th>
      <th class="col-sm-2">小計</th>
      <th class="col-sm-2"></th>
  </thead>
  <tbody>
  <%= render @cart_items %>
  </tbody>
</table>

<div class="row">
  <div class="col-sm-3">
    <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
  </div>

  <div class="col-sm-3 col-sm-offset-6">
  <table class="table table-bordered table-condensed">
  <tr>
    <th class="colored">合計金額</th><td class="cart-item-total-price"><%= CartItem.total_price_with_tax(current_customer).to_s(:delimited) %></td>
  </tr>
  </table>
  </div>

</div>

<div class="col-sm-4 col-sm-offset-4">
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success col-sm-12", data: { turbolinks: false } %>

<% else %>
<div class="text-center">
  <h3>ショッピングカートに商品はありません。</h3>
</div>
<br>
<div class="text-center">
    <p><%= link_to "商品一覧", items_path, class: "btn btn-primary" %></p>
<% end %>
</div>

</div>

    </div>
  </div>
</div>