<section class="customer-edit">
  <table>
    <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
      <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
      <tr><th>氏名</th><td><%= f.text_field :last_name %></td><td><%= f.text_field :first_name %></td></tr>
      <tr><th>フリガナ</th><td><%= f.text_field :last_name_kana %></td><td><%= f.text_field :first_name_kana %></td></tr>
      <tr><th>郵便番号</th><td><%= f.text_field :postcode %></td></tr>
      <tr><th>住所</th><td><%= f.text_field :address %></td></tr>
      <tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>
      <tr><th>会員ステータス</th><td><%= f.radio_button :is_active, true %><%= f.label :is_active, "有効", value: true %></td>
        <td><%= f.radio_button :is_active, false %><%= f.label :is_active, "退会済み", value: false %></td>
      </tr>
      <tr>
        <th><%= f.submit "変更を保存する", class: "btn btn-primary" %></th>
      </tr>
    <% end %>
  </table>
</section>