<div class="col-md-10 col-md-offset-1">
  <%= render "layouts/error", resource: @customer %>
  <section class="customer-edit">
    <h3 class="page-heading margin-bottom-xs"><span>&emsp;<%= @customer.full_name_without_space %>さんの会員情報編集&emsp;</span></h3>
      <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
        <div class="row">
          <div class="col-md-2"><b>会員ID</b></div><div class="col-md-10"><%= @customer.id %></div>
        </div>
        <div class="row">
          <div class="col-md-2"><%= f.label :last_name, "氏名", class: "control-label" %></div>
          <div class="col-md-10 form-inline form-group"><%= f.text_field :last_name, class: "form-control" %>&emsp;<%= f.text_field :first_name, class: "form-control" %></div>
        </div>
        <div class="row">
          <div class="col-md-2"><%= f.label :last_name_kana, "フリガナ", class: "control-label" %></div>
          <div class="col-md-10 form-inline form-group"><%= f.text_field :last_name_kana, class: "form-control" %>&emsp;<%= f.text_field :first_name_kana, class: "form-control" %></div>
        </div>
        <div class="row">
          <div class="col-md-2"><%= f.label :postcode, "郵便番号", class: "control-label" %></div>
          <div class="col-md-10 form-inline form-group"><%= f.text_field :postcode, class: "form-control" %></div>
        </div>
        <div class="row">
          <div class="col-md-2"><%= f.label :address, "住所", class: "control-label" %></div>
          <div class="col-md-10 form-inline form-group"><%= f.text_field :address, class: "form-control" %></div>
        </div>
        <div class="row">
          <div class="col-md-2"><%= f.label :tel, "電話番号", class: "control-label" %></div>
          <div class="col-md-10 form-inline form-group"><%= f.text_field :tel, class: "form-control" %></div>
        </div>
        <div class="row">
          <div class="col-md-2"><%= f.label :email, "メールアドレス", class: "control-label" %></div>
          <div class="col-md-10 form-inline form-group"><%= f.text_field :email, class: "form-control" %></div>
        </div>
        <div class="row">
          <div class="col-md-2"><b>会員ステータス</b></div>
          <div class="col-md-10 form-inline form-group"><%= f.radio_button :is_active, true, class: "form-control" %><%= f.label :is_active, "有効", value: true %><span>&emsp;</span><%= f.radio_button :is_active, false, class: "form-control" %><%= f.label :is_active, "退会済み", value: false %></div>
        </div>
        <div><%= f.submit "変更を保存する", class: "btn btn-primary" %></div>
      <% end %>
    </table>
</section>
</div>