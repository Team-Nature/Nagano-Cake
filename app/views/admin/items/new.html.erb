<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path, local: true do |f| %>
<div>
  <table class='table'>

  <div>
    <%= f.attachment_field :item_image %>
  </div>
  <div class="field form-group col-xs-9">
    <%= f.label :商品名, class: "col-sm-4 control-label" %>
    <%= f.text_field :name, autofocus: true, class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :商品説明, class: "col-sm-3 control-label" %>
    <%= f.text_area :description, autofocus: true,　class: "col-sm-7 control-label" %>
  </div>
  <div class="field form-group" >
    <%= f.label :ジャンル　%>
    <%= f.select :category, Category.all, :id, :name { include_blank: "--選択してください--" } %>
  </div>
  <div class="field form-group col-xs-9">
    <%= f.label :税抜価格, class: "col-sm-4 control-label" %>
    <%= f.text_field :price, autofocus: true, class: "col-sm-4 control-label" %>
    <span>円</span>
  </div>
  <div class="field form-group">
    <%= f.label :販売ステータス %>
    <%= f.select :is_active, [["販売中", true], ["販売中止", false]], { include_blank: "--選択して下さい--" } %>
  </div>
  <div><%= f.submit "新規登録", class: "btn btn-primary" %></div>

</table>
</div>
<% end %>