
<div class="container">
  <div class="row">
    <div class="col-sm-12">

  <h4>商品一覧</h>
  <%= link_to "", new_admin_item_path, class: "btn btn-lg glyphicon glyphicon-plus pull-right" %>
  <table class='table'>
  <thead>
    <tr>
      <th class="info">商品ID</th>
      <th class="info">商品名</th>
      <th class="info">税抜価格</th>
      <th class="info">ジャンル</th>
      <th class="info">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price %></td>
      <td><%= item.category.name %></td>
      <td><%= item.status %></td>
    </tr>
    <% end %>
  </tbody>
  </table>

    </div>
  </div>
</div>
