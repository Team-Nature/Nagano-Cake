<h1>商品編集</h1>
<%= form_with model:@item, url: admin_item_path(@item), local: true do |f| %>

	<!-- エラーメッセージ表示-->
	<% if @item.errors.any? %>
		<div id="error_explanation">
			<h3><%= @item.errors.count %>error prohibited this obj from being saved:</h3>
			<ul>
				<% @item.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<!-- エラーメッセージ表示-->

<table class='table'>


  <div class="field form-group col-xs-9">
    <%= f.label :商品名, class: "col-sm-4 control-label" %>
    <%= f.text_field :name, autofocus: true, class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-xs-12">
    <%= f.label :商品説明, class: "col-sm-3 control-label" %>
    <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "col-sm-7 control-label" %>
  </div>

  <div class="field form-group col-xs-9">
    <%= f.label :ジャンル, class: "col-sm-4 control-label" %>
    <%= f.collection_select :category, Category.all, :id, :name %>
  </div>

　<div class="field form-group col-xs-9">
    <%= f.label :税抜価格, class: "col-sm-4 control-label" %>
    <%= f.text_field :price, autofocus: true, class: "col-sm-4 control-label" %>
    <span>円</span>
  </div>

　　<div class="form-group">
        <%= f.label :is_active, "販売ステータス" %>
        <%= f.select :is_active, [[ "販売中", true ], [ "販売中止", false ]], { selected: @item.is_active }, { class: "form-control" } %>
    </div>
　</tbody>
</table>

  <div class="actions col-xs-6">
    <%= f.submit "変更を保存",class: 'btn btn-success'  %>
  </div>



<% end %>