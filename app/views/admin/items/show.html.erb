<div>
  <h3><span>商品詳細</span></h3>

 
    <div>
      <%= attachment_image_tag @item, :image, :fill, 300, 300, format: "jpg", fallback: "noimage.jpg", size: "300x300" %>
    </div>

    <div>
      <table class="table">
        <tr><th>商品名</th><td><%= @item.name %></td></tr>
        <tr><th>商品説明</th><td><%= @item.description %></td></tr>
        <tr><th>ジャンル</th><td><%= @item.category.name %></td></tr>
        <tr><th>税込価格（税抜価格）</th><td><%= @item.price_with_tax %>（<%= @item.price %>）円</td></tr>
        <tr><th>販売ステータス</th><td><%= @item.status %></td></tr>
      </table>
    </div>
  <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
</div>