<div class="col-sm-12">
  <section class="category-edit">
    <%= render "layouts/error", resource: @category %>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h3><span>ジャンル編集</span></h3>
      </div>
    </div>
    
    <div class="row">
      <div class="col-sm-12">
        <%= form_with model: @category, url: admin_category_path(@category), class: "form-inline", local: true do |f| %>
         <%= f.label :name, "ジャンル", class: "control-label" %>
         <%= f.text_field :name, class: "form-control" %>
         <%= f.radio_button :is_active, true, class: "form-control" %>
         <%= f.label :is_active, "有効", value: :true, class: "control-label" %>
         <%= f.radio_button :is_active, false, class: "form-control" %>
         <%= f.label :is_active, "無効", value: :false, class: "control-label" %>
         <%= f.submit "変更を保存する", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </section>
</div>