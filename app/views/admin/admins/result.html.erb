<div class="col-md-12">
  <h3 class="customer-index-title"><span><%= @heading %></span></h3>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% unless @resources.nil? %>
        <% if @resources.first.class == Customer%>
          <%= render "admin/customers/index" %>
        <% elsif @resources.first.class == Item %>
          <%= render "admin/items/index" %>
        <% end %>
      <% else %>
      	<% if flash[:notice].present? %>
   				<p><%= flash[:notice] %></p>
   			<% end %>
			<% end %>
    </div>
  </div>
</div>