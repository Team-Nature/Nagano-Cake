<section class="order-show">
  <h3>注文履歴詳細</h3>
  <table class="table">
    <th>購入者</th><td><%= link_to @order.customer.name, admin_customer_path(@order.customer) %></td>
    <th>配送先</th><td><%= @order.deliver_postcode %> <%= @order.deliver_address %><br><%= @order.deliver_name %></td>
    <th>支払方法</th><td>銀行振込</td>
    <th>注文ステータス</th><td><%= f.select :how_to_pay, options_for_select( { "入金待ち": 0, "入金確認": 1, "製作中": 2, "発送準備中": 3, "発送済み": 4 } ) %></td>
  </table>
  
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th><th>製作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order.order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.price %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.price * order_item.amount %></td>
          <td>
            <%= form_with model: order_item, local: true do |f| %>
              <% f.select :status, options_for_select({ "着手不可": 0, "製作待ち": 1, "製作中": 2, "製作完了": 3 } ) %>
              <% f.submit "更新", class: "btn btn-primary" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <table>
    <th>商品合計</th><td>円</td>
    <th>送料</th><td><%= order.deliver_fee %>円</td>
    <th>請求金額合計</th><td><%= order.total_price %></td>
  </table>
</section>