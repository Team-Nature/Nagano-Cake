<div class="col-md-10 col-md-offset-1">
  <section class="order-show">
    <h3><span style="background-color: gray;">注文履歴詳細</span></h3>
      <p class="col-md-2"><b>購入者</b></p><p class="col-md-10"><%= link_to @customer.full_name, admin_customer_path(@customer), style: "color: inherit; text-decoration: underline;" %></p>
      <p class="col-md-2"><b>配送先</b></p><p class="col-md-10"><%= @order.deliver_postcode %> <%= @order.deliver_address %><br><%= @order.deliver_name %></p>
      <p class="col-md-2"><b>支払方法</b></p><p class="col-md-10">銀行振込</p>
      <p class="col-md-2"><b>注文ステータス</b></p>
      <p class="col-md-10">
        <%= form_with model: @order, url: admin_order_path(@order), local: true do |f| %>
          <%= f.select :status, options_for_select([ "入金待ち", "入金確認", "製作中", "発送準備中", "発送済み"], selected: @order.status ) %>
          <%= f.submit "更新", class: "btn btn-primary update-order-status" %>
        <% end %>
      </p>
  </section>
  
  <br>
  
  <div class="row">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th><th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.price %></td>
              <td><%= order_item.amount %></td>
              <td><%= order_item.subtotal %></td>
              <%= form_with model: order_item, url: admin_order_item_path(order_item), local: true do |f| %>
                <td><%= f.select :status, options_for_select(["着手不可", "製作待ち", "製作中", "製作完了"], order_item.status), {}, { id: "order-item-#{ order_item.id }-status"} %></td>
                <td><%= f.submit "更新", class: "btn btn-primary update-make-status", id: "update-#{ order_item.id }" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table table-noborder">
        <tr><th>商品合計</th><td><%= @order.total_price %>円</td></tr>
        <tr><th>送料</th><td><%= @order.deliver_fee %>円</td></tr>
        <tr><th>請求金額合計</th><td><%= @order.get_whole_total_price %>円</td></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>