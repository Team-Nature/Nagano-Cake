<div class="col-md-10 col-md-offset-1">
<section class="order-index">
  <h3><span style="background-color: gray;">注文履歴一覧</span></h3>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th><th>購入者</th><th>注文個数</th><th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order) %></td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.count_items %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <!--kaminari / will_paginate-->
</section>
</div>