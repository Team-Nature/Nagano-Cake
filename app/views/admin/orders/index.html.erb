<div class="col-sm-10 col-sm-offset-1">
<section class="order-index">
  <h3 class="page-heading margin-bottom-sm"><span>&emsp;注文履歴一覧&emsp;</span></h3>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), class: "link-format" %></td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.count_items %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
</div>

<%= paginate @orders %>