
<div class="row">
  <div class="col-sm-offset-1 col-sm-12">

<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<table class='table'>
<thead>

  <div class="field form-group col-sm-12">
    <%= f.label :名前, class: "col-sm-2 control-label" %>
    <%= f.label :"(姓)", class: "col-sm-1 control-label"%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name" , class: "col-sm-3 form-control-label" %>
    <%= f.label :"(名)", class: "col-sm-1 control-label" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class: "col-sm-3 form-control-label" %>
  </div>

  <div class="field form-group col-sm-12">
    <%= f.label :フリガナ, class: "col-sm-2 control-label" %>
    <%= f.label :"(セイ)", class: "col-sm-1 control-label"%>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name", class: "col-sm-3 form-control-label" %>
    <%= f.label :"(メイ)", class: "col-sm-1 control-label"%>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name", class: "col-sm-3 form-control-label" %>
  </div>

  <div class="field form-group col-sm-9">
    <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-4 control-label" %>
    <%= f.text_field :postcode, autofocus: true, class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-sm-12">
    <%= f.label :住所, class: "col-sm-3 control-label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-sm-7 control-label" %>
  </div>

  <div class="field form-group col-sm-9">
    <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-4 control-label" %>
    <%= f.text_field :tel, autofocus: true, autocomplete: "tel", class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-sm-9">
    <%= f.label :メールアドレス, class: "col-sm-4 control-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-sm-9">
  <div class="col-sm-4 control-label">
   <%= f.label :パスワード %>
   <% if @minimum_password_length %>
    (<%= @minimum_password_length %>文字以上)
    <% end %></div>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 control-label" %>
  </div>

  <div class="field form-group col-sm-9">
    <%= f.label :"パスワード(確認用)", class: "col-sm-4 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 control-label" %>
  </div>

</tbody>
</table>

  <div class="actions col-sm-6">
    <%= f.submit "新規登録",class: 'btn btn-success col-xs-5 pull-right'  %>
  </div>


<% end %>
<div class="col-sm-9">
<h4>既に登録済みの方</h4>
<br>
<div class="col-sm-12 pull-right">
<%= render "devise/shared/links" %>
</div>
