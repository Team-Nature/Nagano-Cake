<div class="row">
<div class="col-xs-offset-1 col-xs-12">
<% if notice.present? %>
  <div class="notice"><%= notice %></div>
<% end %>
<% if alert.present? %>
  <div class="alert"><%= alert %></div>
<% end %>
<h4 class="page-heading margin-bottom-xs"><span>会員の方はこちらからログイン</span></h4>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field form-group col-sm-9">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
    <%= f.label :email, "メールアドレス", class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
      </div>
    </div>
  </div>

  <div class="field form-group col-sm-9">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <%= f.label :password, "パスワード", class: "col-sm-4 control-label" %>
        <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-sm-6 pull-right">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
     <u><%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %></u>
    <% end %>
  </div>

  <div class="actions col-sm-9 pull-right">
    <%= f.submit "ログイン", class: "col-sm-3 btn btn-primary" %>
  </div>
  
  
  <div class="col-sm-9">
    <h4 class="page-heading margin-bottom-xs"><span>登録がお済みでない方</span></h4>
    <br>
    <div class="col-sm-12">
     <p><u><%= link_to ' こちら ', new_customer_registration_path %></u>から新規登録を行ってください。</p>
  </div>
  
<% end %>

