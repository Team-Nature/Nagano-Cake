<div class="col-sm-offset-1 col-sm-10">
  <h3 class="margin-bottom-sm page-heading"><span>&emsp;新規会員登録&emsp;</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="field form-group">
        <%= f.label :last_name, "名前",  class: "col-sm-2 control-label" %>
        <%= f.label :last_name, "(姓)", class: "col-sm-1 control-label"%>
        <div class="col-sm-3 form-group">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "name" , class: "form-control" %>
        </div>
        <%= f.label :first_name, "(名)", class: "col-sm-1 control-label" %>
        <div class="col-sm-3 form-group">  
          <%= f.text_field :first_name, autocomplete: "name", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="field form-group">
        <%= f.label :last_name_kana, "フリガナ", class: "col-sm-2 control-label" %>
        <%= f.label :last_name_kana, "(セイ)", class: "col-sm-1 control-label"%>
        <div class="col-sm-3 form-group">
          <%= f.text_field :last_name_kana, autocomplete: "name", class: "form-control" %>
        </div>
        <%= f.label :first_name_kana, "(メイ)", class: "col-sm-1 control-label"%>
        <div class="col-sm-3 form-group">
          <%= f.text_field :first_name_kana, autocomplete: "name", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="field form-group">
        <%= f.label :postcode, "郵便番号(ハイフンなし)", class: "col-sm-3 control-label" %>
        <div class="col-sm-3 form-group">
          <%= f.text_field :postcode, class: "form-control" %>
        </div>
        <div class="col-sm-6"></div>
      </div>
    </div>
    
    <div class="row">
      <div class="field form-group">
        <%= f.label :address, "住所", class: "col-sm-3 control-label" %>
        <div class="col-sm-7 form-group">
          <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
        </div>
        <div class="col-sm-3"></div>
      </div>
    </div>

    <div class="row">
      <div class="field form-group">
        <%= f.label :tel, "電話番号(ハイフンなし)", class: "col-sm-3 control-label" %>
        <div class="col-sm-3 form-group">
          <%= f.text_field :tel, autocomplete: "tel", class: "form-control" %>
        </div>
        <div class="col-sm-6"></div>
      </div>
    </div>

    <div class="row">
      <div class="field form-group">
        <%= f.label :email, "メールアドレス", class: "col-sm-3 control-label" %>
        <div class="col-sm-3 form-group">
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-3">
        <div class="field form-group control-label">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
            <b>(<%= @minimum_password_length %>文字以上)</b>
          <% end %>
        </div>
      </div>
      <div class="col-sm-3 form-group">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="col-sm-6"></div>
    </div>

    <div class="row">
      <div class="field form-group">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-3 control-label" %>
        <div class="col-sm-3 form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        <div class="col-sm-6"></div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 col-sm-offset-4">
        <div class="actions text-center">
          <%= f.submit "新規登録",class: 'btn btn-success btn-block' %>
        </div>
      </div>
    </div>
    
  <% end %>
  
  <div class="row">
    <h3 class="page-heading margin-bottom-xs"><span>&emsp;既に登録済みの方&emsp;</span></h3>
    <div class="col-sm-12">
      <%= render "devise/shared/links" %>
    </div>
  </div>
  
</div>
